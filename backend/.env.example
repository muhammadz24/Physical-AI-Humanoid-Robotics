# =============================================================================
# Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual credentials

# FastAPI Configuration
ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=1.0.0

# Qdrant Vector Database (Cloud)
QDRANT_URL=https://your-cluster-url.gcp.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=textbook_embeddings

# Neon Postgres Database
DATABASE_URL=postgresql://user:password@host/database

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Embeddings Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Google Gemini Configuration (Free Tier)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# JWT Authentication (Generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars
